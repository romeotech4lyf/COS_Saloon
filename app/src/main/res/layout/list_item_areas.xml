<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_areas_parent"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    app:layout_collapseMode="parallax"

    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="20dp"
        android:foreground="?selectableItemBackground"
        android:theme="@style/CardView.Light"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="25dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/list_item_areas_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_areas_image"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:elevation="25dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Area Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_areas_image"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:elevation="25dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Area"
            android:textAlignment="center"
            android:textColor="@color/colorTwentyFivePercentBlack"
            android:textSize="10dp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_areas_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:elevation="15dp"
        android:padding="4dp"
        android:src="@drawable/ic_location_on_black_24dp"
        android:visibility="gone" />


</RelativeLayout>


