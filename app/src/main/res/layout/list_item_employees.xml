<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_employees_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"

    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="10dp"
        android:elevation="20dp"
        android:foreground="?selectableItemBackground"
        android:theme="@style/CardView.Light"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true">


    </androidx.cardview.widget.CardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_employees_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:elevation="15dp"
        android:src="@mipmap/company"
        android:padding="4dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/list_item_employees_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_employees_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="25dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="Employee Name"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_employees_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_employees_name"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="25dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Store Name"
        android:textAlignment="center"
        android:textColor="@color/colorSecondary"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/list_item_employees_area_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_employees_store_name"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="25dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Area Name"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="10dp" />


</RelativeLayout>


