<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="20dp"
        android:foreground="?selectableItemBackground"
        android:theme="@style/CardView.Light"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/admin_recyclerView_store_image"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                android:src="@color/colorWhite" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/admin_recyclerView_employee_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:src="@mipmap/admin_dp" />


            <TextView
                android:id="@+id/admin_recyclerView_employee_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_recyclerView_employee_image"
                android:layout_gravity="bottom|center"
                android:background="@color/colorPrimary"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Employee Name"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/admin_recyclerView_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_recyclerView_employee_name"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Store Name"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/admin_recyclerView_area_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/admin_recyclerView_store_name"
                android:layout_gravity="bottom|center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:text="Area Name"
                android:textAlignment="center"
                android:textColor="@color/colorSeventyFivePercentBlack"
                android:textSize="10dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>